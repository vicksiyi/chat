.send{
  width: 100%;
  height: 100rpx;
  border: 1rpx solid rgb(219, 219, 219);
  display: flex;
}

.send input{
  border: 1rpx solid rgb(219, 219, 219);
  width: 500rpx;
  height: 80rpx;
  margin: 10rpx;
  padding-left: 30rpx;
  color: #666;
}

.send button{
  width: 200rpx;
  height: 80rpx;
  float: right;
  margin: 10rpx;
  color: #fff;
  background: #19be6b;
}

.send button:active{
  top: 2px;
}